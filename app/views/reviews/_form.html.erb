<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-inputs">
    <%= f.input :content, label: "Your subjective review", error: "You must write something!", placeholder: 'Excellent service, mediocre food.' %>
    <%= f.input :rating, label: "Rating out of 5",error: "You must give an integer rating", hint: "0, 1, 2, 3, 4, or 5", placeholder: "e.g. 5" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success"  %>
  </div>

<% end %>
